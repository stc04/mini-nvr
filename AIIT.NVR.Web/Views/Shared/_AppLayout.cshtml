<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AI-IT Inc NVR</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/nvr-styles.css" asp-append-version="true" />
    
    <!-- Meta Tags -->
    <meta name="description" content="AI-IT Inc Professional NVR Security Management System">
    <meta name="keywords" content="NVR, Security, Cameras, AI-IT Inc, Surveillance">
    <meta name="author" content="AI-IT Inc">
    
    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#1a1a1a">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="AI-IT Inc NVR">
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="AI-IT Inc NVR - Professional Security System">
    <meta property="og:description" content="Advanced Network Video Recorder with AI-powered analytics">
    <meta property="og:image" content="/images/og-image.jpg">
    <meta property="og:type" content="website">
    
    <style>
        :root {
            --aiit-primary: #00ff88;
            --aiit-secondary: #007acc;
            --aiit-dark: #1a1a1a;
            --aiit-light: #f8f9fa;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--aiit-light);
        }
        
        .navbar-dark {
            background-color: var(--aiit-dark) !important;
        }
        
        .btn-success {
            background-color: var(--aiit-primary);
            border-color: var(--aiit-primary);
            color: #000;
        }
        
        .btn-success:hover {
            background-color: #00e67a;
            border-color: #00e67a;
            color: #000;
        }
        
        .text-primary {
            color: var(--aiit-secondary) !important;
        }
        
        .bg-primary {
            background-color: var(--aiit-secondary) !important;
        }
        
        .border-left-primary {
            border-left: 0.25rem solid var(--aiit-secondary) !important;
        }
        
        .border-left-success {
            border-left: 0.25rem solid var(--aiit-primary) !important;
        }
    </style>
</head>
<body>
    @RenderBody()

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <!-- Custom JS -->
    <script src="~/js/nvr-app.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
