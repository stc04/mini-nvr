@{
    ViewData["Title"] = "AI-IT Inc NVR - Professional Security System";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --aiit-primary: #00ff88;
            --aiit-secondary: #007acc;
            --aiit-dark: #1a1a1a;
        }
        
        body {
            background: linear-gradient(135deg, var(--aiit-dark) 0%, #2d2d2d 100%);
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
        }
        
        .hero-section {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            position: relative;
            overflow: hidden;
        }
        
        .hero-content {
            z-index: 2;
            max-width: 800px;
            padding: 2rem;
        }
        
        .logo-container {
            margin-bottom: 2rem;
        }
        
        .logo {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            box-shadow: 0 0 50px rgba(0, 255, 136, 0.3);
            margin-bottom: 2rem;
        }
        
        .hero-title {
            font-size: 4rem;
            font-weight: bold;
            margin-bottom: 1rem;
            background: linear-gradient(45deg, var(--aiit-primary), var(--aiit-secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .hero-subtitle {
            font-size: 1.5rem;
            margin-bottom: 3rem;
            opacity: 0.9;
        }
        
        .cta-buttons {
            margin-bottom: 4rem;
        }
        
        .btn-primary-custom {
            background: linear-gradient(45deg, var(--aiit-primary), var(--aiit-secondary));
            border: none;
            padding: 1rem 2rem;
            font-size: 1.2rem;
            font-weight: bold;
            color: #000;
            text-decoration: none;
            border-radius: 50px;
            transition: all 0.3s ease;
            margin: 0 1rem;
        }
        
        .btn-primary-custom:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(0, 255, 136, 0.3);
            color: #000;
        }
        
        .btn-outline-custom {
            border: 2px solid var(--aiit-primary);
            color: var(--aiit-primary);
            padding: 1rem 2rem;
            font-size: 1.2rem;
            font-weight: bold;
            text-decoration: none;
            border-radius: 50px;
            transition: all 0.3s ease;
            margin: 0 1rem;
            background: transparent;
        }
        
        .btn-outline-custom:hover {
            background: var(--aiit-primary);
            color: #000;
            transform: translateY(-3px);
        }
        
        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            margin-top: 4rem;
        }
        
        .feature-card {
            background: rgba(255, 255, 255, 0.1);
            padding: 2rem;
            border-radius: 15px;
            text-align: center;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .feature-card:hover {
            transform: translateY(-10px);
            background: rgba(255, 255, 255, 0.15);
        }
        
        .feature-icon {
            font-size: 3rem;
            color: var(--aiit-primary);
            margin-bottom: 1rem;
        }
        
        .animated-bg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0.1;
            z-index: 1;
        }
        
        .floating-element {
            position: absolute;
            animation: float 6s ease-in-out infinite;
        }
        
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }
        
        .stats-section {
            background: rgba(0, 0, 0, 0.3);
            padding: 4rem 0;
            margin-top: 4rem;
        }
        
        .stat-item {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .stat-number {
            font-size: 3rem;
            font-weight: bold;
            color: var(--aiit-primary);
            display: block;
        }
        
        .stat-label {
            font-size: 1.2rem;
            opacity: 0.8;
        }
        
        @media (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
            }
            
            .hero-subtitle {
                font-size: 1.2rem;
            }
            
            .btn-primary-custom,
            .btn-outline-custom {
                display: block;
                margin: 1rem 0;
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="hero-section">
        <div class="animated-bg">
            <div class="floating-element" style="top: 10%; left: 10%;">
                <i class="fas fa-video fa-2x"></i>
            </div>
            <div class="floating-element" style="top: 20%; right: 15%; animation-delay: -2s;">
                <i class="fas fa-shield-alt fa-2x"></i>
            </div>
            <div class="floating-element" style="bottom: 30%; left: 20%; animation-delay: -4s;">
                <i class="fas fa-eye fa-2x"></i>
            </div>
            <div class="floating-element" style="bottom: 20%; right: 10%; animation-delay: -1s;">
                <i class="fas fa-lock fa-2x"></i>
            </div>
        </div>
        
        <div class="hero-content">
            <div class="logo-container">
                <img src="/images/aiit-logo.png" alt="AI-IT Inc" class="logo">
            </div>
            
            <h1 class="hero-title">AI-IT Inc NVR</h1>
            <p class="hero-subtitle">
                Professional Network Video Recorder with AI-Powered Analytics
            </p>
            
            <div class="cta-buttons">
                <a href="/Home/App" class="btn-primary-custom">
                    <i class="fas fa-play me-2"></i>Launch Application
                </a>
                <a href="#features" class="btn-outline-custom">
                    <i class="fas fa-info-circle me-2"></i>Learn More
                </a>
            </div>
            
            <div class="features-grid" id="features">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-video"></i>
                    </div>
                    <h3>Live Monitoring</h3>
                    <p>Real-time camera feeds with multi-view support and instant alerts</p>
                </div>
                
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-brain"></i>
                    </div>
                    <h3>AI Analytics</h3>
                    <p>Advanced motion detection and intelligent event recognition</p>
                </div>
                
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-cloud"></i>
                    </div>
                    <h3>Cloud Storage</h3>
                    <p>Secure cloud backup with local and remote storage options</p>
                </div>
                
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <h3>Mobile Access</h3>
                    <p>Access your security system from anywhere with mobile apps</p>
                </div>
                
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <h3>Smart Home</h3>
                    <p>Integration with Alexa, Google Home, and Apple HomeKit</p>
                </div>
                
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3>Enterprise Security</h3>
                    <p>Bank-level encryption and professional security features</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="stats-section">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div class="stat-item">
                        <span class="stat-number" data-count="10000">0</span>
                        <div class="stat-label">Active Installations</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-item">
                        <span class="stat-number" data-count="99.9">0</span>
                        <div class="stat-label">% Uptime</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-item">
                        <span class="stat-number" data-count="24">0</span>
                        <div class="stat-label">Hours Monitoring</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stat-item">
                        <span class="stat-number" data-count="500">0</span>
                        <div class="stat-label">Supported Cameras</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Animate counters
        function animateCounters() {
            const counters = document.querySelectorAll('.stat-number');
            
            counters.forEach(counter => {
                const target = parseInt(counter.getAttribute('data-count'));
                const increment = target / 100;
                let current = 0;
                
                const timer = setInterval(() => {
                    current += increment;
                    if (current >= target) {
                        current = target;
                        clearInterval(timer);
                    }
                    
                    if (target === 99.9) {
                        counter.textContent = current.toFixed(1);
                    } else {
                        counter.textContent = Math.floor(current);
                    }
                }, 20);
            });
        }
        
        // Start animation when page loads
        window.addEventListener('load', () => {
            setTimeout(animateCounters, 1000);
        });
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>
</html>
