<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Professional NVR System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/nvr-styles.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="fas fa-video me-2"></i>
                Professional NVR
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/WebViewer">
                            <i class="fas fa-home me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/WebViewer/Live">
                            <i class="fas fa-eye me-1"></i>Live View
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/WebViewer/Playback">
                            <i class="fas fa-play me-1"></i>Playback
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/WebViewer/Settings">
                            <i class="fas fa-cog me-1"></i>Settings
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user me-1"></i>Admin
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user-cog me-2"></i>Profile</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container-fluid mt-3">
        @RenderBody()
    </main>

    <!-- Status Bar -->
    <div class="status-bar bg-dark text-white py-2 mt-4">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <span id="system-status">System Status: <span class="text-success">Online</span></span>
                </div>
                <div class="col-md-6 text-end">
                    <span id="camera-count">Cameras: <span class="text-info">0/0</span></span>
                    <span class="ms-3" id="recording-status">Recording: <span class="text-warning">0</span></span>
                    <span class="ms-3" id="storage-info">Storage: <span class="text-primary">Loading...</span></span>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.2/socket.io.js"></script>
    <script src="~/js/nvr-app.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
